{
  "extends": ["tslint:recommended"],
  "rules": {
    "prefer-for-of": false,
    "no-shadowed-variable": false,
    "no-bitwise": false,
    "variable-name": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "jsx-no-lambda": false,
    "jsx-boolean-value": false,
    "no-console": false,
    "no-trailing-whitespace": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}
